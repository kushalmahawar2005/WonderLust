<% layout("/layouts/boilerplate") %>

<h1>All Listings</h1>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-3">
  <% for (let listing of allListing) { %>
    <div class="col mb-4">
      <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card h-100">
          <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height:20rem; object-fit:cover;" />
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b> <br />
              &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>
