<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3>Listing Details</h3>
  </div>

  <div class="card col-6 offset-3 show-card">
    <img src="<%= listing.image %>" class="card-img-top show-img" alt="listing_image">

    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b> <br>
        <%= listing.description %> <br>
        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> <br>
        <%= listing.location %> <br>
        <%= listing.country %> <br>
      </p>
    </div>
  </div>
</div>

<div class="btns mt-3">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

  <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" style="display:inline;">
    <button type="submit" class="btn btn-danger offset-1">Delete</button>
  </form>
</div>
